<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ryan.appsearcher.SettingsActivity"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    tools:ignore="MergeRootFrame" >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/infoTextView"
        android:text="Additional TextView information"
        android:layout_alignParentTop="true"
        android:textColor="#0002ff"/>

    <!-- White line to separate sections -->
    <View
        android:background="#ffffff"
        android:layout_width = "fill_parent"
        android:layout_height="2dip"
        android:id="@+id/blankLine1"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/infoTextView" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AppSearcher Chat Head"
        android:thumb="@drawable/switch_thumb"
        android:id="@+id/appSearcherChatHeadSwitch"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/blankLine1" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Holo Dark Theme"
        android:thumb="@drawable/switch_thumb"
        android:layout_marginTop="15dp"
        android:id="@+id/appSearcherHoloDarkSwitch"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/appSearcherChatHeadSwitch"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Default AppSearcher Icon"
        android:thumb="@drawable/switch_thumb"
        android:layout_marginTop="15dp"
        android:id="@+id/appSearcherChatHeadIconSwitch"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/appSearcherHoloDarkSwitch"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate on the Play Store"
        android:id="@+id/rateOnPlayStoreButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/rounded_corners_button"
        android:layout_above="@+id/blankLine2"/>

    <!-- White line to separate sections -->
    <View
        android:background="#ffffff"
        android:layout_width = "fill_parent"
        android:layout_height="2dip"
        android:id="@+id/blankLine2"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/emailDevReportBugButton" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Developer/Report Bug"
        android:id="@+id/emailDevReportBugButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/rounded_corners_button"
        android:layout_above="@+id/blankLine3"/>

    <!-- White line to separate sections -->
    <View
        android:background="#ffffff"
        android:layout_width = "fill_parent"
        android:layout_height="2dip"
        android:id="@+id/blankLine3"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/requestAFeatureButton" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request a feature"
        android:id="@+id/requestAFeatureButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/rounded_corners_button"
        android:layout_alignParentStart="true"/>
</RelativeLayout>


